{
  "manifest_version": 2,

  "name": "Bitcoin Wallet",
  "description": "A simple Browser extension wallet to kick-ass bitcoin!",
  "version": "0.1",

  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "https://blockchain.info/merchant/*/"
  ],
  "background": {
    "scripts": ["lib/js/background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "wallet.html"
  }
}