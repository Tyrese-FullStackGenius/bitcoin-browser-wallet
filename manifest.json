{
  "manifest_version": 2,

  "name": "Bitcoin Browser Wallet",
  "description": "A simple to use bitcoin browser wallet",
  "version": "0.2.3",
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },

  "permissions": [
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "https://blockchain.info/merchant/*/*"
  ],
  "background": {
    "scripts": ["lib/js/background.js"]
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "wallet.html"
  }
}
